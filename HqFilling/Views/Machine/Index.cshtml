@model HqFilling.Model.MachineModel
@{
    ViewBag.Title = "Machine Setup";
}
<script src="@Url.Content("~/Scripts/Libs/Jquery/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/Libs/Jquery/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
@Html.ValidationSummary(true, "")@*Please correct the errors and try again.*@
@using (Html.BeginForm("Index", "Machine", FormMethod.Post, new { @id = "frmMachine" }))
{
    <div>
        <fieldset id="fsMachine">
            <legend>Machine Setup</legend>
            @Html.HiddenFor(m => m.MachineId)
            <div class="editor-label">
                @Html.LabelFor(m => m.MachineName)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.MachineName)
                @Html.ValidationMessageFor(m => m.MachineName)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.MachineCode)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.MachineCode)
                @Html.ValidationMessageFor(m => m.MachineCode)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.MachineVolume)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.MachineVolume)
                @Html.ValidationMessageFor(m => m.MachineVolume)
            </div>
            <div class="editor-label">
                @Html.LabelFor(m => m.Comment)
            </div>
            <div class="editor-field">
                @Html.TextBoxFor(m => m.Comment)
            </div>
            <p>
                <input type="submit" value="Save" />
            </p>
        </fieldset>
    </div>
}
